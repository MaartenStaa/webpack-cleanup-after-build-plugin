{
  "defaultSeverity": "warn",
  "extends": [
    "tslint-config-standard"
  ],
  "jsRules": {},
  "rules": {
    "adjacent-overload-signatures": true,
    "arrow-return-shorthand": true,
    "ban-comma-operator": true,
    "binary-expression-operand-order": true,
    "curly": true,
    "forin": true,
    "import-spacing": true,
    "member-ordering": [true, {"order": "fields-first"}],
    "newline-before-return": true,
    "no-any": true,
    "no-conditional-assignment": true,
    "no-console": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-empty-interface": true,
    "no-implicit-dependencies": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-irregular-whitespace": true,
    "no-null-keyword": true,
    "no-sparse-arrays": true,
    "no-string-literal": true,
    "no-unbound-method": [true, "ignore-static"],
    "no-unnecessary-class": [true, "allow-empty-class", "allow-constructor-only"],
    "no-unnecessary-initializer": true,
    // "no-unsafe-any": true,
    "no-unsafe-finally": true,
    "no-var-requires": true,
    "no-void-expression": [true, "ignore-arrow-function-shorthand"],
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-shorthand": true,
    "ordered-imports": [true, {"grouped-imports": true}],
    "only-arrow-functions": [true, "allow-declarations", "allow-named-functions"],
    "prefer-const": true,
    "prefer-for-of": true,
    "prefer-method-signature": true,
    "prefer-object-spread": true,
    "promise-function-async": true,
    "return-undefined": true,
    "typedef": [
      true,
      "call-signature",
      "arrow-call-signature",
      "parameter",
      "object-destructuring",
      "array-destructuring"
    ]
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "node_modules",
      "resources/assets/js/client/app/components/ActiveDuels.vue",
      "resources/assets/js/client/app/components/ActiveDuelSlot.vue",
      "resources/assets/js/client/app/components/ChangePassword.vue",
      "resources/assets/js/client/app/components/DuelResults.vue",
      "resources/assets/js/client/app/components/DuelsMenu.vue",
      "resources/assets/js/client/app/components/MainMenu.vue",
      "resources/assets/js/client/app/components/Menus.vue",
      "resources/assets/js/client/app/components/NewDuelMenu.vue",
      "resources/assets/js/client/app/components/NewDuelSearch.vue",
      "resources/assets/js/client/app/components/NewDuelSearchResult.vue",
      "resources/assets/js/client/app/components/Profile.vue",
      "resources/assets/js/client/app/components/RankingItem.vue",
      "resources/assets/js/client/app/components/RankingMenu.vue"
    ]
  }
}
